<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_key_header_soundcore_sound"
        android:title="@string/pref_header_sound">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="pref_soundcore_gaming_mode"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/soundcore_gaming_mode_summary"
            android:title="@string/soundcore_gaming_mode_title"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_header_soundcore_general"
        android:title="@string/pref_header_general">

        <ListPreference
            android:defaultValue="3"
            android:entries="@array/soundcore_aerofit_auto_power_off_names"
            android:entryValues="@array/soundcore_auto_power_off_values"
            android:icon="@drawable/ic_power_settings_new"
            android:key="pref_soundcore_auto_power_off"
            android:summary="@string/soundcore_auto_power_off_summary"
            android:title="@string/soundcore_auto_power_off_title"/>
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="pref_soundcore_control_touch_disabled"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/prefs_touch_lock_summary"
            android:title="@string/prefs_touch_lock"/>
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="pref_soundcore_touch_tone"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/pref_touch_tone_summary"
            android:title="@string/pref_touch_tone"/>
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="pref_soundcore_battery_low_tone"
            android:layout="@layout/preference_checkbox"
            android:summary="@string/soundcore_battery_low_tone_summary"
            android:title="@string/soundcore_battery_low_tone_title"/>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
